    "supported_hotkeys": [
        {
            "name": "Number Keys",
            "keys": "0-9",
            "function": "Jump to timeline percentage",
            "blocking": "enabled by default"
        },
        {
            "name": "Spacebar",
            "keys": "Space",
            "function": "Play/Pause",
            "blocking": "disabled by default"
