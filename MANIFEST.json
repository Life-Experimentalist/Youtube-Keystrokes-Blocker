        {
            "name": "Arrow Keys",
            "keys": "↑ ↓ ← →",
            "function": "Navigation",
            "blocking": "disabled by default"
        },
        {
            "name": "Ctrl+Left",
            "keys": "Ctrl+←",
            "function": "Previous chapter",
            "blocking": "enabled by default"
        },
        {
            "name": "Ctrl+Right",
            "keys": "Ctrl+→",
            "function": "Next chapter",
            "blocking": "enabled by default"
        },
        {
            "name": "F Key",
            "keys": "F",
            "function": "Fullscreen",
            "blocking": "disabled by default"
        },
        {
            "name": "M Key",
            "keys": "M",
            "function": "Mute/Unmute",
            "blocking": "enabled by default"
        },
        {
            "name": "Speed Control",
            "keys": "Shift+< >",
            "function": "Playback speed",
            "blocking": "disabled by default"
        },
        {
            "name": "Frame Skip",
            "keys": ". ,",
            "function": "Frame-by-frame navigation",
            "blocking": "disabled by default"
